<%- include('partials/header') -%>
    <main class="container min-h-screen flex items-center justify-center">
        <section class="w-full max-w-md bg-white rounded-lg shadow-md p-8 flex flex-col items-center">
                <% if (locals.messages.errors) { %>
                    <% messages.errors.forEach( el => { %>
                        <div class="alert alert-danger"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <% if (locals.messages.info) { %>
                    <% messages.info.forEach( el => { %>
                        <div class="alert alert-info"><%= el.msg %></div>
                    <% }) %>    
                <% } %>
                <form action="/signup" method="POST" class="w-full flex flex-col items-center">
                    <div class="mb-3 w-full flex flex-col items-center">
                        <h1 class="text-3xl font-bold pb-4 text-center">Sign Up</h1>
                        <label for="userName" class="form-label self-start">User Name</label>
                        <input type="text" class="form-control" id="userName" name="userName">
                    </div>
                    <div class="mb-3 w-full flex flex-col items-center">
                        <label for="exampleInputEmail1" class="form-label self-start">Email address</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                        <div id="emailHelp" class="form-text self-start">We'll never share your email with anyone else.</div>
                    </div>
                    <div class="mb-3 w-full flex flex-col items-center">
                        <label for="password" class="form-label self-start">Password</label>
                        <input type="password" class="form-control" id="password" name="password">
                    </div>
                    <div class="mb-3 w-full flex flex-col items-center">
                        <label for="confirmPassword" class="form-label self-start">Confirm Password</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword">
                    </div>
                    <button type="submit" class="rounded px-4 py-2 text-white bg-blue-400 hover:bg-blue-600 transition-colors duration-500">Submit</button>
                </form>
            </section>
        </div>
    </main>

<%- include('partials/footer') -%>