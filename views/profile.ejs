<%- include('partials/header') -%>
<main class="container min-h-screen flex items-center justify-center">
  <div class="w-full max-w-4xl bg-white rounded-lg shadow-md p-8 flex flex-row gap-x-8">
    <div class="w-1/2">
      <div class="flex flex-col gap-y-4">
        <h1 class="text-3xl font-bold mb-4">Profile</h1>
        <p><strong>User Name</strong>: <%= user.userName %></p>
        <p><strong>Email</strong>: <%= user.email %></p>
        <button class="self-start"><a href="/logout" class="rounded px-4 py-2 text-white bg-blue-400 hover:bg-blue-600 transition-colors duration-500">Logout</a></button>
      </div>
      <div class="mt-5">
        <h2><strong>Add a post</strong></h2>
        <form action="/post/createPost" enctype="multipart/form-data" method="POST">
          <div class="mb-3">
            <label for="title" class="form-label">Title:</label>
            <input type="text" class="form-control" id="title" name="title">
          </div>
          <div class="mb-3">
            <label for="caption" class="form-label">Caption:</label>
            <textarea class="form-control" id="caption" name="caption"></textarea>
          </div>
          <div class="mb-3">
            <label for="imgUpload" class="form-label">Image:</label>
            <input type="file" class="form-control" id="imageUpload" name="file">
          </div>
          <button type="submit" class="rounded px-4 py-2 text-white bg-blue-400 hover:bg-blue-600 transition-colors duration-500" value="Upload">Submit</button>
        </form>
      </div>
    </div>
    <div class="w-1/2">
      <h3><strong>Previous Posts</strong></h3>
      <ul class="flex flex-wrap gap-4 list-unstyled">
        <% for(var i=0; i<posts.length; i++) {%>
          <li class="w-1/2 mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid rounded" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
      </ul>
      <div class="flex justify-center mt-5">
        <button><a class="rounded px-4 py-2 text-white bg-blue-400 hover:bg-blue-600 transition-colors duration-500" href="/feed">Return to Feed</a></button>
      </div>
    </div>
  </div>
</main>
<%- include('partials/footer') -%>