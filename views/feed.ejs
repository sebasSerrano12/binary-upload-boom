<%- include('partials/header') -%>
<main class="container min-h-screen flex items-center justify-center">
  <div class="w-full max-w-4xl bg-white rounded-lg shadow-md p-8">
    <h1 class="w-full text-center mb-2 text-3xl "><strong>Feed</strong></h1>
    <ul class="flex flex-wrap gap-2.5 list-unstyled justify-center">
      <% for(var i=0; i<posts.length; i++) {%>
        <li class="w-1/2 mt-3 flex justify-center border border-blue-300 rounded-lg p-1">
          <span class="text-sm font-semibold text-center w-full"><%= posts[i].title %></span>
          <a href="/post/<%= posts[i]._id%>">
            <img class="img-fluid rounded-lg" src="<%= posts[i].image%>">
          </a>
        </li>
      <% } %>
    </ul>
  </div>
</main>
<%- include('partials/footer') -%>